	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Auto-set auth token from login response",
					"if (pm.request.url.path.includes('/auth/login') && pm.request.method === 'POST') {",
					"    pm.sendRequest({",
					"        url: pm.request.url,",
					"        method: 'POST',",
					"        header: pm.request.headers,",
					"        body: pm.request.body",
					"    }, function (err, response) {",
					"        if (response.code === 200) {",
					"            const responseJson = response.json();",
					"            if (responseJson.token) {",
					"                pm.environment.set('auth_token', responseJson.token);",
					"            }",
					"        }",
					"    });",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Common test scripts",
					"pm.test('Status code is 200', function () {",
					"    pm.response.to.have.status(200);",
					"});",
					"",
					"pm.test('Response time is less than 2000ms', function () {",
					"    pm.expect(pm.response.responseTime).to.be.below(2000);",
					"});",
					"",
					"pm.test('Response has required headers', function () {",
					"    pm.response.to.have.header('Content-Type');",
					"    pm.response.to.have.header('Content-Type').to.include('application/json');",
					"});"
				]
			}
		}
